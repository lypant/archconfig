# Update package list
sudo pacman -Syy

# Install git
sudo pacman -S git

# Clone archconfig repo
cd ~
git clone https://github.com/lypant/archconfig

# Go to the local copy of repo
cd archconfig

# Add branches which we are interested in
git branch --track dwm_early origin/dwm_early

# Checkout the branch we are interested in
git checkout dwm_early

# Launch the script
./050_automated_script.sh

