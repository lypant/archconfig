# Update package list
sudo pacman -Syy

# Install git
sudo pacman -S git

# Clone archconfig repo
cd ~
git clone https://github.com/lypant/archconfig

# Go to the local copy of repo
cd archconfig

# Add branches which we are interested in
git branch --track dwm_automation origin/dwm_automation

# Checkout the branch we are interested in
git checkout dwm_automation

# Change access rights for the script
chmod +x 160_script

# Launch the script
./160_script

