# Update package list
sudo pacman -Syy

# Install git
sudo pacman -S git

# Configure basic settings
git config --global core.editor "vim"
git config --global user.name "Adam Szczygie≈Ç"
git config --global user.email "lypant@tlen.pl"
git config --global color.ui true

# Clone archconfig repo
cd ~
git clone https://github.com/lypant/archconfig

# Go to the local copy of repo
cd archconfig

# Add branches which we are interested in
git branch --track dwm origin/dwm

# Checkout the branch we are interested in
git checkout dwm

# Change access rights for the script
chmod +x 140_script

# Launch the script
~/140_script

