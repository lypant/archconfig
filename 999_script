
# Install vim
sudo pacman -S vim

# Edit ~/.vimrc
vim ~/.vimrc

" This is a .vimrc comment

" Show line numbers
set number

" Enable syntax checking
syntax enable

# Install alsa
sudo pacman -S alsa-utils

# Unmute the channels; set gains to 0
alsamixer

# Test sound
speaker-test -c 2

# Install Xorg
sudo pacman -S xorg-server xorg-server-utils xorg-xinit mesa

# Install VirtualBox Guest Additions
sudo pacman -S virtualbox-guest-utils

# Manually load the modules
sudo modprobe -a vboxguest vboxsf vboxvideo

# Create config file with modules to be loaded
sudo vim /etc/modules-load.d/virtualbox.conf
vboxguest
vboxsf
vboxvideo

# Add the following line to the top of ~/.xinitrc above any exec options
vim ~/.xinitrc
/usr/bin/VBoxClient-all
# NOTE:
#	Add WM/DE launch command (e.g. exec dwm) after the line

# Install abs
sudo pacman -S abs

# Install dwm using abs
sudo abs community/dwm
cp -r /var/abs/community/dwm ~/dwm
cd ~/dwm
makepkg -i

# Add entry to ~/.xinitrc to start dwm on X startup
vim ~/.xinitrc
	exec dwm

# Install dmenu
sudo pacman -S dmenu

# NOTE:
# 	To exit from dwm hit Shift + Alt + q

# Create an alias for easier dwm rebuilding after source code edit
vim ~/.bashrc
alias redwm='cd ~/dwm; makepkg -g >> PKGBUILD; makepkg -efi --noconfirm; killall dwm'
# TODO - Check alternative way of (re)configuration with git

# Install urxvt
# TODO - consider patched version (font width bug fixed) - rxvt-unicode-patched
sudo pacman -S rxvt-unicode

